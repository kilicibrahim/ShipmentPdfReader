<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ShipmentPdfReader"
       x:Class="ShipmentPdfReader.MainPage">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor"
                        Value="#dfdfde" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>
    
    <TabBar>

        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Size Info">
            <ShellContent ContentTemplate="{DataTemplate local:SizeInfoPage}" />
        </Tab>

        <Tab Title="Color Info">
            <ShellContent ContentTemplate="{DataTemplate local:ColorInfoPage}" />
        </Tab>

        <Tab Title="Special SKU">
            <ShellContent ContentTemplate="{DataTemplate local:SpecialSkuCodeInfoPage}" />
        </Tab>
        <Tab Title="Divide Pdf">
            <ShellContent ContentTemplate="{DataTemplate local:DividePdfPage}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
